<Application x:Class="ООО__Валимо_.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ООО__Валимо_"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="Title">
            <Setter Property="ItemsControl.FontFamily" Value="Comic Sans MS"/>
            <Setter Property="ItemsControl.Foreground" Value="White"/>
        </Style>
        <Style x:Key="Text">
            <Setter Property="ItemsControl.FontFamily" Value="Comic Sans MS"/>
            <Setter Property="ItemsControl.FontSize" Value="18"/>
        </Style>
        <Style x:Key="Button">
            <Setter Property="ItemsControl.FontFamily" Value="Comic Sans MS"/>
            <Setter Property="ItemsControl.Foreground" Value="White"/>
            <Setter Property="ItemsControl.Background" Value="#9252f0"/>
            <Setter Property="ItemsControl.BorderBrush" Value="#9252f0"/>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="15"/>
                </Style>
            </Style.Resources>
        </Style>
    </Application.Resources>
</Application>
